<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/geekbrains_hiber</property>
        <property name="connection.username">ru.geekbrains</property>
        <property name="connection.password">ru.geekbrains</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="show_sql">true</property>
        <property name="current_session_context_class">thread</property>
<!--        <property name="hibernate.hbm2ddl.auto">create</property>-->

        <mapping class="ru.ru.geekbrains.persist.Customer"/>
        <mapping class="ru.ru.geekbrains.persist.Product"/>
        <mapping class="ru.ru.geekbrains.persist.CustomerProducts"/>
    </session-factory>
</hibernate-configuration>
